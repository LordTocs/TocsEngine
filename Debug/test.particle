shader_controller
{
	update
	{
		particle.Velocity -= vec3(0,0.2,0) * dt;
		particle.Position += particle.Velocity * dt;
		particle.Life -= dt;
		particle.Rotation += 0.5 * dt;
		particle.Size *= (1 - 0.5 * dt);
	}
}
